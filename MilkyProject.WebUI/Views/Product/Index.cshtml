@model List<MilkyProject.WebUI.Dtos.ResultProductDto>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />
    <table class="table table-bordered">

        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Eski Fiyat</th>
            <th>Yeni Fiyat</th>
            <th>Durum</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        @foreach(var item in Model)
        {
            <tr>
                <td>@item.productId</td>
                <td>@item.productName</td>
                <td>@item.oldPrice</td>
                <td>@item.newPrice</td>
                <td>@item.status</td>
                <td><a href="/Product/DeleteProduct/@item.productId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Product/UpdateProduct/@item.productId" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }

    </table>

    <a href="/Product/CreateProduct/" class="btn btn-success">Yeni Kategori</a>
</div>